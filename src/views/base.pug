doctype html
html(lang="ko")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")            
        title #{pageTitle} | #{siteName}

        body
            header
                h1=pageTitle
                
                nav
                    ul
                        li 
                            a(href="/") Home
                        if loggedIn
                            li 
                                a(href="myProfile") #{loggedInUser.name}의 프로필
                            li 
                                a(href="/videos/upload") Upload video
                            li 
                                a(href="/user/editUser") Edit-Profile
                            li
                                a(href="/logout") Logout
                        else 
                            li 
                                a(href="/join") Join 
                            li 
                                a(href="/login") Login
                        li 
                            a(href="/search") Search


            main
                block content

        include ./partials/footer.pug