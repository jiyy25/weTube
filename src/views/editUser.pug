extends base

block content
    if errorMessage
        span=errorMessage
    img(src="/"+ loggedInUser.avatarUrl, width="100", height="100")
    form(method="post" enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(type="text", name="name", placeholder="name", value=loggedInUser.name, required) 
        input(type="text", name="email", placeholder="email", value=loggedInUser.email ,required) 
        input(type="text", name="username", placeholder="userName",value=loggedInUser.username , required)
        input(type="text", name="location",placeholder="location", value=loggedInUser.location ,required) 
        input(type="submit", value="Edit-Profile" ) 

        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr; 
